<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CustomCalendar.EmployeeManagementPage"
             xmlns:viewmodel ="clr-namespace:CustomCalendar.ViewModels"
             Title="Employees"
             x:DataType="viewmodel:EmployeeManagementViewModel">    
    
    <!--Need this as a pop-out, then list of employees on the page-->
    <VerticalStackLayout>
        <Label 
            Text="Active Employees:"
            TextColor="MidnightBlue"
            VerticalOptions="Start" 
            HorizontalOptions="Start"
            FontSize="Medium"/>
        <!--Need placeholder for employee # and what shift they work-->
        <!--Need labels for checkboxes-->
        <Entry Placeholder="Name" Text="{Binding FullName}"/>
        <Entry Placeholder="PhoneNumber" Text="{Binding PhoneNumber}"/>
        <Entry Placeholder="Address" Text="{Binding Address}"/>
        <CheckBox IsChecked="{Binding HasPTO}"/>
        <CheckBox IsChecked="{Binding WantsMoreHours}"/>
        <CheckBox IsChecked="{Binding IsActive}"/>
        <Button Text="Save" Command="{Binding SaveEmployeeCommand}"/>
    </VerticalStackLayout>
</ContentPage>