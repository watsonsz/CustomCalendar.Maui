<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CustomCalendar.MainPage"
             xmlns:viewmodel ="clr-namespace:CustomCalendar"
             x:DataType ="viewmodel:MainPage">
    

    <ScrollView>
        
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Start">
            <!--This grid needs to go into the Schdeule Page.xaml-->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <DatePicker x:Name="DatePicker"
                        MinimumDate="01/01/2022"
                        MaximumDate="01/01/2029"
                        Date="{Binding DatePicked}"
                        Grid.Column="0"/>           
                    <Button Text="Go"
                        Clicked="CreateCalendar"
                            Grid.Column="1"/>
                </Grid>
            <VerticalStackLayout
                x:Name="MainPanel"
Spacing="25"
Padding="30,0"
VerticalOptions="Start">
                
            </VerticalStackLayout>
           


        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
